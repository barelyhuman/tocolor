{
  "name": "tocolor",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "source": "src/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "author": {
    "email": "ahoy@barelyhuman.dev",
    "name": "Reaper",
    "url": "https://reaper.im"
  },
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.esm.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "wrap; shx cp src/*.d.ts dist",
    "dev": "wrap -w",
    "fix": "wrap --fix",
    "test": "uvu -r esm tests",
    "size": "GITHUB_TOKEN='' bundlesize",
    "prepare": "npm run build; husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@barelyhuman/wrap": "^0.0.8-1",
    "@rollup/plugin-babel": "^5.3.0",
    "bundlesize": "^0.18.1",
    "esm": "^3.2.25",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "shx": "^0.3.3",
    "standard": "^16.0.3",
    "uvu": "^0.5.1"
  },
  "bundlesize": [
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB",
      "compression": "brotli"
    },
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB"
    },
    {
      "path": "./dist/**/*.js",
      "maxSize": "4 kB",
      "compression": "none"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.js": [
      "wrap --fix"
    ]
  }
}
