{
	"name": "@barelyhuman/tocolor",
	"version": "0.0.8",
	"keywords": [
		"color",
		"conversion",
		"rgb to hex",
		"hex to rgb",
		"hsl to rgb",
		"tiny"
	],
	"repository": "git@github.com:barelyhuman/tocolor.git",
	"license": "MIT",
	"author": "Reaper <ahoy@barelyhuman.dev> (https://reaper.im)",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "tsup src/index.js --format cjs,esm --clean --dts --target=node12.22 --minify",
		"dev": "yarn run build -- --watch",
		"fix": "prettier --write .",
		"prepare": "npm run build",
		"prepublishOnly": "rm -rf dist; npm run build; npm run size;",
		"release": "bumpp --commit --push --tag && pnpm publish",
		"size": "sizesnap",
		"test": "uvu -r esm tests"
	},
	"prettier": "@barelyhuman/prettier-config",
	"devDependencies": {
		"@arkweid/lefthook": "^0.7.7",
		"@barelyhuman/prettier-config": "^0.1.0",
		"bumpp": "^7.1.1",
		"esm": "^3.2.25",
		"prettier": "^2.5.1",
		"rollup": "^2.56.3",
		"shx": "^0.3.3",
		"sizesnap": "^0.1.0",
		"tsup": "^5.11.13",
		"typescript": "^4.5.5",
		"uvu": "^0.5.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"sizesnap": {
		"files": [
			"./dist/**/*"
		]
	}
}
